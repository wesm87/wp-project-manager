{
  "name": "wp-project-manager",
  "description": "A Node CLI tool that simplifies the process of setting up a new WordPress project and development environment.",
  "version": "0.7.12",
  "license": "MIT",
  "homepage": "https://github.com/wesm87/wp-project-manager",
  "repository": {
    "type": "git",
    "url": "https://github.com/wesm87/wp-project-manager.git"
  },
  "bugs": {
    "url": "https://github.com/wesm87/wp-project-manager/issues"
  },
  "contributors": [
    "Wes Moberly <wes@wesmoberly.me> (http://wesmoberly.me)"
  ],
  "keywords": [
    "WordPress",
    "development",
    "project",
    "manager",
    "starter",
    "scaffold",
    "theme",
    "plugin",
    "vagrant",
    "vvv"
  ],
  "main": "index.js",
  "bin": {
    "wppm": "bin/wp-project-manager",
    "wp-project-manager": "bin/wp-project-manager"
  },
  "engines": {
    "node": "^5.10.0",
    "composer": "^1.0.0-beta2"
  },
  "scripts": {
    "gulp": "gulp",
    "bump": "gulp bump --major",
    "bump:major": "gulp bump --major",
    "bump:minor": "gulp bump --minor",
    "bump:patch": "gulp bump --patch",
    "release": "gulp release --major",
    "release:major": "gulp release --major",
    "release:minor": "gulp release --minor",
    "release:patch": "gulp release --patch",
    "build": "gulp build",
    "build-dev": "gulp build && npm link && npm run jsdoc",
    "jsdoc": "jsdoc -c jsdoc.conf.json",
    "lint": "eslint app test",
    "test": "gulp test",
    "coverage": "gulp coverage",
    "coverage-report": "npm run coveralls && npm run codeclimate",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "codeclimate": "codeclimate-test-reporter < coverage/lcov.info",
    "preversion": "npm test",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "babel-runtime": "^6.11.6",
    "colors": "^1.1.2",
    "fs-extra": "^0.30.0",
    "js-yaml": "^3.6.0",
    "lodash": "^4.11.1",
    "mocktail": "^0.3.8",
    "mustache": "^2.2.1",
    "utils-upsearch": "^1.0.0",
    "yargs": "^5.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.7.7",
    "babel-eslint": "^6.0.4",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-rollup": "^1.2.0",
    "babel-preset-stage-3": "^6.5.0",
    "babel-register": "^6.14.0",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.3.3",
    "coveralls": "^2.11.12",
    "eslint": "^3.4.0",
    "eslint-plugin-import": "^1.14.0",
    "gulp": "git://github.com/gulpjs/gulp.git#4.0",
    "gulp-babel": "^6.1.2",
    "gulp-composer": "^0.4.0",
    "gulp-git": "^1.7.1",
    "gulp-istanbul": "^1.1.1",
    "gulp-mocha": "^3.0.1",
    "gulp-nsp": "^2.4.0",
    "gulp-shell": "^0.5.2",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.4.0",
    "mocha": "^3.0.2",
    "rollup": "^0.34.10",
    "rollup-plugin-babel": "^2.6.1",
    "semver": "^5.3.0",
    "shelljs": "^0.7.0",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0"
  }
}
